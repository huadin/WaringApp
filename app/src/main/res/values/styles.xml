<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--主题-->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--顶部状态栏颜色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--window color-->
        <!--<item name="android:windowBackground">@color/window_bg</item>-->
        <!--各控制元件的预设颜色-->
        <!--<item name="colorControlNormal">@color/test_color</item>-->

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!--toolbar 样式及颜色-->
    <style name="toolbar_style">
        <item name="android:textColor">@color/test_color</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>


    <!--注册输入框-->
    <style name="register_edit_text_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/login_register_button_height_96px</item>
        <item name="android:gravity">center_vertical</item>
        <!--<item name="android:layout_marginTop">@dimen/login_fragment_margin_top</item>-->
        <item name="android:orientation">horizontal</item>
    </style>

    <!--登录，注册 button-->
    <style name="login_register_submit_button">
        <item name="android:layout_width">match_parent</item>
        <!--<item name="android:layout_height">@dimen/login_register_button_height_96px</item>-->
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/login_fragment_margin_top</item>
        <item name="android:background">@drawable/fault_input_bg</item>
        <item name="android:textColor">@color/app_text_color</item>
        <item name="android:textSize">@dimen/text_size_18</item>
    </style>

    <!--忘记密码,注册账号-->
    <style name="forget_password_layout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/to_register_padding</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <!--注册 fragment 的下划线-->
    <style name="view_bg_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">@dimen/view_top_5dp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <!--注册输入框-->
    <style name="register_input_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/register_edit_text_margin_left</item>
        <item name="android:background">@null</item>
    </style>

    <!--故障信息 title-->
    <style name="report_info_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/report_title_margin_left_16dp</item>
        <item name="android:layout_marginRight">@dimen/report_title_margin_left_16dp</item>
        <item name="android:layout_marginTop">@dimen/report_title_margin_top_10dp</item>
        <item name="android:textColor">@color/report_text_color</item>
        <item name="android:textSize">@dimen/report_text_size_18sp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!--分割线-->
    <style name="linear_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/linear_view_height_1px</item>
        <item name="android:background">@color/linear_view_color</item>
    </style>

    <!--设置中item layout 样式-->
    <style name="setting_linear_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/setting_linear_layout_height</item>
        <item name="android:layout_marginTop">@dimen/setting_linear_margin_top</item>
        <!--<item name="android:background">@drawable/setting_layout_item_selector</item>-->
        <item name="android:background">@drawable/layout_ripple_selector</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!--设置中 imageView 样式-->
    <!--<style name="setting_linear_layout_img_style">-->
    <!--<item name="android:layout_width">wrap_content</item>-->
    <!--<item name="android:layout_height">match_parent</item>-->
    <!--<item name="android:layout_marginLeft">@dimen/setting_margin_left_16dp</item>-->
    <!--</style>-->

    <!--设置张 textView 样式-->
    <style name="setting_linear_layout_text_view_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/setting_margin_left_16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:drawablePadding">@dimen/setting_margin_left_16dp</item>
    </style>

    <!--退出按钮样式-->
    <style name="app_out_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/app_out_button_height</item>
        <item name="android:layout_marginLeft">@dimen/setting_margin_left_16dp</item>
        <item name="android:layout_marginRight">@dimen/setting_margin_left_16dp</item>
        <item name="android:layout_marginTop">@dimen/app_out_button_top</item>
        <item name="android:textColor">@color/app_text_color</item>
        <item name="android:background">@drawable/setting_out_button_shape</item>
        <item name="android:textSize">@dimen/text_size_22</item>
    </style>

    <!--个人信息 item-->
    <style name="user_info_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/user_info_item_text_color</item>
        <item name="android:textSize">@dimen/report_text_size_18sp</item>
        <item name="android:layout_marginLeft">@dimen/user_info_item_margin</item>
    </style>
    <!--个人信息 layout-->
    <style name="user_info_item_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/user_info_item_height</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/layout_ripple_selector</item>
        <item name="android:focusable">true</item>
        <item name="android:orientation">horizontal</item>
        <!--<item name="android:layout_marginTop">@dimen/user_info_item_margin_top_5dp</item>-->
        <!--<item name="android:layout_marginBottom">@dimen/user_info_item_margin_top_5dp</item>-->
    </style>

    <!--个人信息 layout 根布局-->
    <style name="user_info_item_layout_parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/user_info_item_margin</item>
        <item name="android:background">@drawable/user_info_item_layout_shape</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--个人信息 title-->
    <style name="user_info_item_title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/user_info_item_margin</item>
        <item name="android:layout_marginTop">@dimen/user_info_item_margin_top_10dp</item>
        <item name="android:layout_marginBottom">@dimen/user_info_item_margin_top_5dp</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/user_info_item_text_color_9</item>
    </style>

    <!--个人信息 view-->
    <style name="user_info_item_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/user_info_item_margin_1dp</item>
        <item name="android:background">@color/user_info_item_text_color_9</item>
    </style>

    <style name="update_password_input_edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/user_info_item_margin</item>
        <item name="android:layout_marginRight">@dimen/user_info_item_margin</item>
        <item name="android:layout_marginTop">@dimen/user_info_item_margin</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="user_fragment_text_content_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical|end</item>
    </style>

    <style name="user_fragment_text_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_18</item>
    </style>

    <style name="user_fragment_item_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/user_fragment_layout_height</item>
        <item name="android:orientation">horizontal</item>
    </style>


</resources>
