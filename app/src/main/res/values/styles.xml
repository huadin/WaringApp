<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--主题-->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!--注册输入框-->
    <style name="register_edit_text_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/login_register_button_height_96px</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">@dimen/login_fragment_margin_top</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!--登录，注册 button-->
    <style name="login_register_submit_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/login_register_button_height_96px</item>
        <item name="android:layout_marginTop">@dimen/login_fragment_margin_top</item>
        <item name="android:background">@drawable/fault_input_bg</item>
        <item name="android:textColor">@color/app_text_color</item>
        <item name="android:textSize">@dimen/text_size_18</item>
    </style>

    <!--忘记密码,注册账号-->
    <style name="forget_password_layout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/to_register_padding</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <!--注册 fragment 的下划线-->
    <style name="view_bg_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">@dimen/view_top_5dp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <!--注册输入框-->
    <style name="register_input_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">@dimen/register_edit_text_margin_left</item>
        <item name="android:background">@null</item>
    </style>

</resources>
