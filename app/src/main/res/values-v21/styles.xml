<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!--主题-->
    <style name="AppTheme" parent="AppTheme.Base">
        <!--底部导航颜色，21版本以后生效-->
        <item name="android:navigationBarColor">@color/navigation_bar_color</item>
    </style>

    <!--toolbar menu 弹出位置-->
    <style name="toolbar_menu_pop_style" parent="ThemeOverlay.AppCompat.Light">
        <item name="overlapAnchor">false</item>
        <item name="android:listPreferredItemHeightSmall">40dp</item><!--menu item 的高度-->
    </style>

    <!--SwitchCompat  start-->
    <style name="switch_compat_style">
        <!--打开时按钮的颜色-->
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <!--关闭时按钮的颜色-->
        <item name="colorSwitchThumbNormal">@color/switch_off_color</item>
        <!--关闭时轨迹的颜色-->
        <item name="android:colorForeground">@color/switch_off_color</item>
    </style>
    <!--SwitchCompat  end-->

</resources>
