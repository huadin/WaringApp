<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/rc_bg_toast"
    android:orientation="horizontal">


    <ProgressBar
        android:id="@+id/load_dialog_progress"
        android:layout_width="@dimen/load_dialog_width"
        android:layout_height="@dimen/load_dialog_width"/>

    <TextView
        android:id="@+id/load_dialog_tip_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/load_dialog_margin"
        android:text="@string/app_name"/>

</LinearLayout>