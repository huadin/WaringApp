<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/range_dialog_edit_margin_top"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/range_dialog_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="@string/click_input_range"
        android:inputType="number"
        android:maxLength="3"
        android:maxLines="1"
        android:paddingEnd="@dimen/range_dialog_edit_padding"
        android:paddingStart="@dimen/range_dialog_edit_padding">
    </EditText>
</LinearLayout>

