<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/urgent_card_view_margin_top"
    android:layout_marginLeft="@dimen/urgent_card_view_margin_left"
    android:layout_marginRight="@dimen/urgent_card_view_margin_left"
    android:layout_marginTop="@dimen/urgent_card_view_margin_top"
    app:cardBackgroundColor="@color/test_color"
    app:cardCornerRadius="@dimen/urgent_card_view_radius"
    app:cardElevation="@dimen/urgent_card_view_elevation">

    <TextView
        android:id="@+id/urgent_text_view"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:textSize="18sp"/>

</android.support.v7.widget.CardView>