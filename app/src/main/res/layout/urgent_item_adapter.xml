<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/urgent_card_view_margin_top"
    android:layout_marginLeft="@dimen/urgent_card_view_margin_left"
    android:layout_marginRight="@dimen/urgent_card_view_margin_left"
    android:layout_marginTop="@dimen/urgent_card_view_margin_top"
    app:cardBackgroundColor="@color/test_color"
    app:cardCornerRadius="@dimen/urgent_card_view_radius"
    app:cardElevation="@dimen/urgent_card_view_elevation">

    <LinearLayout
        android:id="@+id/urgent_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/urgent_text_title"
            style="@style/urgent_item_text_style"
            android:layout_marginTop="5dp"
            android:text="@string/app_name"
            android:textSize="@dimen/text_size_18"/>

        <TextView
            android:id="@+id/urgent_text_time"
            style="@style/urgent_item_text_style"
            android:layout_marginBottom="5dp"
            android:text="@string/temp_time"
            android:textSize="@dimen/text_size_16"/>

    </LinearLayout>

</android.support.v7.widget.CardView>