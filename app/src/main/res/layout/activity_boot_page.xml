<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.huadin.waringapp.BootPageActivity">

    <!--引导画面-->
    <android.support.v4.view.ViewPager
        android:id="@+id/boot_page_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/start_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/boot_page_margin_bottom"
        android:gravity="center_horizontal"
        android:text="@string/start_app"
        android:textSize="@dimen/text_size_22"
        android:visibility="gone"/>

    <!--引导页-->
    <LinearLayout
        android:id="@+id/boot_page_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/boot_page_linear_layout_margin_bottom"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_view_1"
            style="@style/boot_page_image_style"
            android:contentDescription="@null"/>

        <ImageView
            android:id="@+id/image_view_2"
            style="@style/boot_page_image_style"
            android:contentDescription="@null"/>

        <ImageView
            android:id="@+id/image_view_3"
            style="@style/boot_page_image_style"
            android:contentDescription="@null"/>

        <ImageView
            android:id="@+id/image_view_4"
            style="@style/boot_page_image_style"
            android:contentDescription="@null"/>

    </LinearLayout>


</RelativeLayout>
