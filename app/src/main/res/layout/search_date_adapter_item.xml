<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/card_layout_style"
    app:cardBackgroundColor="@color/test_color"
    app:cardCornerRadius="@dimen/urgent_card_view_radius"
    app:cardElevation="@dimen/urgent_card_view_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--类型-->
        <TextView
            android:id="@+id/search_adapter_type"
            style="@style/search_adapter_type_style"/>

        <!--日期-->
        <TextView
            android:id="@+id/search_adapter_date"
            style="@style/search_adapter_type_style"/>

        <!--范围-->
        <TextView
            android:id="@+id/search_adapter_scope"
            style="@style/search_adapter_type_style"
            android:layout_marginBottom="@dimen/search_adapter_type_margin_top"/>
    </LinearLayout>

</android.support.v7.widget.CardView>